datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         Role
  gstNumber    String?  // restaurants only
  aadharNumber String?  // NGOs only
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  NGO
  RESTAURANT
  ADMIN
}
